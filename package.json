{
  "private": true,
  "name": "tcg-calculator",
  "version": "1.0.0",
  "description": "",
  "directories": {
    "test": "test"
  },
  "scripts": {
    "build": "spago build",
    "build:bundle": "spago bundle --minify --source-maps --outfile output/app.js --pedantic-packages",
    "build:parcel": "parcel build index.html --public-url .",
    "bundle": "npm run build:bundle && npm run build:parcel",
    "gendevcert": "dotnet dev-certs https --format pem --no-password --export-path ./devcert.pem --trust",
    "server": "parcel serve --cert devcert.pem --key devcert.key --no-hmr index.html",
    "test": "spago test",
    "watch": "spago bundle-app --watch --source-maps --to output/app.js"
  },
  "author": "acple",
  "license": "MIT",
  "dependencies": {
    "big-integer": "^1.6.51",
    "uuid": "^9.0.1"
  },
  "devDependencies": {
    "@parcel/css": "^1.14.0",
    "esbuild": "^0.19.4",
    "parcel": "^2.9.3",
    "purescript": "^0.15.11",
    "spago": "^0.93.18",
    "tailwindcss": "^3.3.3"
  }
}
